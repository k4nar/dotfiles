[general]
import = [
    "~/.config/alacritty/colors.toml",
]

[env]
WINIT_X11_SCALE_FACTOR = "1"

{{ if .use_tmux }}
[scrolling]
history = 0

[shell]
program = "tmux"

[window]
# use left option key as alt key in MacOS
option_as_alt = "OnlyLeft"
{{ end }}

[selection]
save_to_clipboard = true

[[keyboard.bindings]]
action = "SearchForward"
key = "F"
mods = "Control"

# Shift+Esc for Vi mode, allow to select text easily
[[keyboard.bindings]]
action = "ToggleViMode"
key = "Escape"
mods = "Shift"

[[keyboard.bindings]]
action = "ToggleViMode"
key = "Escape"
mode = "Vi"
